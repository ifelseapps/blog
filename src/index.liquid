---
layout: default.liquid
---

<main class="posts content__main">
  {% assign posts = collections.post | reverse %}
  {% include posts.liquid %}
</main>
<aside class="content__sidebar">
  <ul class="posts__tags-list tags-list">
    {% assign tags = collections.tags %}
    {% for currentTag in tags %}
      {% capture tagUrl %}/tags/{{ currentTag }}/{% endcapture %}
      <li class="tags-list__item">
        <a class="tag" href="{{ tagUrl }}"># {{ currentTag }}</a>
      </li>
    {% endfor %}
  </ul>
</aside>
