<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bundle.css">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/template/favicons/apple-touch-icon.png?v=4">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/template/favicons/favicon-32x32.png?v=4">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/template/favicons/favicon-16x16.png?v=4">
  <link rel="manifest" href="/images/template/favicons/site.webmanifest?v=4">
  <link rel="shortcut icon" href="/images/template/favicons/favicon.ico?v=4">
  <link rel="alternate" type="application/rss+xml" title="RSS" href="https://maximpavlov.su/rss.xml">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="msapplication-config" content="/images/template/favicons/browserconfig.xml?v=4">
  <meta name="theme-color" content="#ffffff">
  <title>{{ title }}</title>
  <meta property="og:site_name" content="Senior frontend engineer – Максим Павлов"/>

  <meta property="og:title" content="{{ title }}">

  {% if description %}
    <meta name="description" content="{{ description }}">
    <meta property="og:description" content="{{ description }}"/>
  {% endif %}

  {% if keywords %}
    <meta name="keywords" content="{{ keywords }}">
  {% endif %}

  {% if type %}
    <meta property="og:type" content="{{ type }}" />
  {% endif %}

  <meta property="og:url" content="https://maximpavlov.su{{ page.url }}" />

  <meta property="og:image" content="https://v1.screenshot.11ty.dev/{{ 'https://maximpavlov.su' | encode }}{{ page.url | encode }}{{ '?v=2' |  encode }}/opengraph/"/>
  <meta property="og:image:width" content="1200"/>

  <meta name="twitter:card" content="summary_large_image"/>
  <meta name="twitter:site" content="@ifelseapps"/>
</head>
<body>
  {% if page.url == '/' %}
    {{ content |  safe }}
  {% else %}
    <div class="page">
      {% include 'header.liquid' %}

      {% if is_post_detail %}
        <main>
          <article>
            <header class="page-title">
              <div class="container">
                {% include 'header-date.liquid' %}
                <h1 class="h h_lvl_1 page-title__title">{{ title }}</h1>
              </div>
              {% if preview_text %}
                <div class="container">
                  <div class="page-description page-title__description">
                    {{ preview_text }}
                  </div>
                </div>
              {% endif %}
            </header>
            <div class="container page__content">{{ content | safe }}</div>
          </article>
        </main>
      {% else %}
        <main>
          <div class="page-title">
            <div class="container">
              <h1 class="h h_lvl_1 page-title__title">{{ title }}</h1>
            </div>
          </div>
          <div class="container page__content">{{ content | safe }}</div>
        </main>
      {% endif %}

      {% include 'footer.liquid' %}
    </div>
  {% endif %}
  <script src="/scripts/common.js"></script>
