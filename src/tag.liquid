---
layout: default.liquid
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - post
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: Заметки с тегом "{{ tag }}"
---
<main class="content__main">
  {% assign posts = collections[tag] | reverse %}
  {% include posts.liquid %}
</main>
{% include tags.liquid %}
